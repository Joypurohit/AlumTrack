<% include partials/header %>
<% if(!appointments[0])
{%>
    <h1>NO APPOINTMENT DATA FOUND</h1>
<% }
else { %>
<fieldset>
        <h3>Appointment Schedule</h3>
        <table class="table table-borderless" >
            <tr>
            <th>Patient Name</th>
            <th>Contact Number</th>
            <th>Date</th> 
            <th>Details</th>
            </tr>
        <% appointments.forEach(function(appointment){ 
            if(appointment.status!="R"){%>
            <tr>
                <% var month = appointment.appointmentdate.getMonth() +1; %>
                <td><%= appointment.patientname.toUpperCase() %></td>
                <td><%= appointment.patientcn %></td>
                <td><%= appointment.appointmentdate.getDate() + "/" + month + "/" + appointment.appointmentdate.getFullYear() %></td> 
                <td><a href="/doctorhome/<%= appointment._id %>" class="btn btn-primary">View Details</a></td>
            </tr>
        <% }}) 
        if(addappo){%>
        <form id="signup" method="POST" action="/addappointment" >
        <% var month = T.getMonth() +1; %>
        <td><input name="patientname" type="text" class="form-control" placeholder="Patient Name" required></td>
        <td><input name="patientcn" type="text" class="form-control" placeholder="Contact Number" required></td>
        <td><%= T.getDate() + "/" + month + "/" + T.getFullYear() %></td> 
        <td><button name="appointmentdate" value="<%= T %>" id="register">ADD APPOINTMENT</button></td>
        </form>
    </table>
    </fieldset>
<% }} %>
<% include partials/footer %>