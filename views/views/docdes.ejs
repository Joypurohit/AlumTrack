<% include partials/header %>
<style>
    #button {
        text-align: center;
    }
    input[type="checkbox"] {
        margin-right: 5px;
        margin-top: 5px;
    }
    .pding {
        padding-left: 50px;
    }
    input[type="number"] {
        width: 50px;
    }
    #submitButton {
        height: 40px;
        background: #0062ff;
        border: none;
        color: white;
        border-radius: 18px;
        font-weight: bold;
        font-size: 125%;
    }
    .notVisible {
        display: none;
    }
</style>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add a brief description</h1>
        <div style="width: 70%; margin: 25px auto;">
            <form action="/dsignup/docdes" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Description" required>
                </div>
                <fieldset>
                    <legend>Choose your timings</legend>
                    <div class="form-group">
                        <table>
                            <tr>
                                <td>Monday</td>
                                <td class="pding"><input class="chbx" id="CHECK" type="checkbox"></td>
                                <td class="notVisible time pding"><label>From</label> <input name="doctor[monday.from]" type="number"> <label>To</label> <input name="doctor[monday.to]" type="number"></td>
                            </tr>
                            <tr>
                                    <td>Tuesday</td>
                                    <td class="pding"><input class="chbx" type="checkbox"></td>
                                    <td class="notVisible time pding"><label>From</label> <input name="doctor[tuesday.from]" type="number"> <label>To</label> <input name="doctor[tuesday.to]" type="number"></td>
                            </tr>
                            <tr>
                                    <td>Wednesday</td>
                                    <td class="pding"><input class="chbx" type="checkbox"></td>
                                    <td class="notVisible time pding"> <label>From</label> <input name="doctor[wednesday.from]" type="number"> <label>To</label> <input name="doctor[wednesday.to]" type="number"></td>
                            </tr>
                            <tr>
                                <td>Thursday</td>
                                <td class="pding"><input class="chbx" type="checkbox"></td>
                                <td class="notVisible time pding"><label>From</label> <input name="doctor[thursday.from]" type="number"> <label>To</label> <input name="doctor[thursday.to]" type="number"></td>
                            </tr>
                            <tr>
                                    <td>Friday</td>
                                    <td class="pding"><input class="chbx" type="checkbox"></td>
                                    <td class="notVisible time pding"> <label>From</label> <input name="doctor[friday.from]" type="number"> <label>To</label> <input name="doctor[friday.to]" type="number"></td>
                                </tr>
                            <tr>
                                <td>Saturday</td>
                                <td class="pding"><input class="chbx" type="checkbox"></td>
                                <td class="notVisible time pding"><label>From</label> <input name="doctor[saturday.from]" type="number"> <label>To</label> <input name="doctor[saturday.to]" type="number"></td>
                            </tr>
                            <tr>
                                <td>Sunday</td>
                                <td class="pding"><input class="chbx" type="checkbox"></td>
                                <td class="notVisible time pding"><label>From</label> <input name="doctor[sunday.from]" type="number"> <label>To</label> <input name="doctor[sunday.to]" type="number"></td>
                            </tr>    
                        </table>
                    </div>
                </fieldset>
                <div style="text-align: center">
                    <button style="width: 20%" id="submitButton">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    document.querySelectorAll("input[type=\"number\"]").forEach(function(el) {
        el.min = 9;
        el.max = 21;
    })

    document.querySelectorAll(".chbx")[0].addEventListener("click", function() {
        document.querySelectorAll(".time")[0].classList.toggle("notVisible");
    })

    document.querySelectorAll(".chbx")[1].addEventListener("click", function() {
